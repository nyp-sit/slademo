<?xml version="1.0" encoding="utf-8"?>

<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    sothree:umanoPanelHeight="35dp"
    sothree:umanoShadowHeight="4dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fyp.nyp.hdbproject.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HDB APP"
            android:gravity="center"
            android:paddingTop="24dp"
            android:textSize="36sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:text = "Exhibitions visited:"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">
            <fyp.nyp.hdbproject.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="36sp"
                android:id="@+id/tvCorrectAnswer"/>
            <fyp.nyp.hdbproject.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" out of 6"
                android:textSize="36sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="9"
                    android:background="#e2dedb"
                    android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="9">
                    <Button
                        android:layout_width="@dimen/box_size"
                        android:layout_height="@dimen/box_size"
                        android:layout_weight="3"
                        android:id="@+id/btnExhibit1"
                        android:background="@drawable/selector_pink"/>
                    <Button
                        android:layout_width="@dimen/box_size"
                        android:layout_height="@dimen/box_size"
                        android:layout_weight="3"
                        android:id="@+id/btnExhibit2"
                        android:background="@drawable/selector_red"/>

                    <Button
                        android:layout_width="@dimen/box_size"
                        android:layout_height="@dimen/box_size"
                        android:layout_weight="3"
                        android:id="@+id/btnExhibit3"
                        android:background="@drawable/selector_green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="9">
                    <Button
                        android:layout_width="@dimen/box_size"
                        android:layout_height="@dimen/box_size"
                        android:layout_weight="3"
                        android:id="@+id/btnExhibit4"
                        android:background="@drawable/selector_orange"/>
                    <Button
                        android:layout_width="@dimen/box_size"
                        android:layout_height="@dimen/box_size"
                        android:layout_weight="3"
                        android:id="@+id/btnExhibit5"
                        android:background="@drawable/selector_blue"/>

                    <Button
                        android:layout_width="@dimen/box_size"
                        android:layout_height="@dimen/box_size"
                        android:layout_weight="3"
                        android:id="@+id/btnExhibit6"
                        android:background="@drawable/selector_purple"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            ></LinearLayout>
                    <fyp.nyp.hdbproject.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="#bd4746"
                        android:layout_weight="6"
                        android:text="Visit all 6 booths to claim your reward!"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            ></LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:weightSum="12">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></LinearLayout>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rewards"
                    android:layout_weight="10"
                    android:background="@drawable/btn_rewards_state"
                    android:id="@+id/btnRewards"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llParentLayout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/llTabLayout"
                android:background="@android:color/darker_gray">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <fyp.nyp.hdbproject.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Station 1"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:layout_centerInParent="true"
                        android:id="@+id/tvStationName"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_media_next"
                        android:id="@+id/ivProceedToQuiz"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"

                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flFrameLayout"></LinearLayout>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
